{
  "name": "zoom-level",
  "version": "2.3.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "A comprehensive cross-browser package that allow you to determine page's and element's zoom level",
  "keywords": [
    "zoom",
    "zoom-level",
    "browser",
    "zoom-detect",
    "scale"
  ],
  "main": "dist/zoom-level.js",
  "module": "dist/zoom-level.esm.js",
  "esnext": "dist/zoom-level.next.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xobotyi/zoom-level.git"
  },
  "bugs": {
    "url": "https://github.com/xobotyi/zoom-level/issues"
  },
  "homepage": "https://github.com/xobotyi/zoom-level",
  "author": {
    "name": "Anton Zinovyev",
    "url": "https://github.com/xobotyi",
    "email": "xog3@yandex.ru"
  },
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.3",
    "@xobotyi/eslint-config": "^1.0.6",
    "@xobotyi/preset-typescript": "^1.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.2",
    "rollup": "^1.30.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "semantic-release": "^16.0.3",
    "terser": "^4.0.0",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "lint": "eslint ./src/**/*.ts ./*.{ts,js}",
    "lint:fix": "yarn lint --fix",
    "lint:types": "tsc --noEmit",
    "build": "rimraf ./dist && rollup --config && npm run minify",
    "minify": "terser ./dist/zoom-level.js -o ./dist/zoom-level.js -mc pure_funcs=['Object.defineProperty'] --toplevel --source-map includeSources,url=zoom-level.js.map",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix -t verbose",
      "git add"
    ],
    "./*.{ts,js}": [
      "tslint --fix -t verbose",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:types && lint-staged",
      "pre-push": "yarn lint:fix && rimraf dist && yarn build"
    }
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "next",
        "prerelease": "rc"
      }
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
