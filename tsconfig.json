{
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "declaration": false,
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
